{% extends 'base.html.twig' %}

{% block title %}Homepage{% endblock %}

{% block body %}
    <div class="container">
        <div class="row" id="overall">
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/bootstrap/css/bootstrap.min.css') }}" type="text/css" />
    <link rel="stylesheet" href="{{ asset('bundles/bootstrap/css/bootstrap-theme.min.css') }}" type="text/css" />
    <!--<link rel="stylesheet" href="{{ asset('bundles/app/bootstrap-theme.min.css') }}" type="text/css" />-->

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700" type="text/css" />
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('bundles/jquery/jquery.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/underscore/underscore-min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/backbone/backbone-min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/marionette/backbone.marionette.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/bootstrap/js/bootstrap.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/masonry/masonry.pkgd.min.js') }}"></script>

    <script type="text/javascript" src="{{ asset('bundles/app/js/Album.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/app/js/Image.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/app/js/RootLayout.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/app/js/Controller.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/app/js/Application.min.js') }}"></script>

    <script id="template-rootLayoutView" type="text/template">
        <div class="col-md-4 col-lg-2" id="sidebar">
            <div id="albums"></div>
            <div id="albums-with-max-images"></div>
        </div>

        <div class="col-md-8 col-lg-10 grid" id="images">
            <div class="grid-item">...</div>
        </div>
    </script>

    <script id="template-albumItemView" type="text/template">
        <a href="#" onclick="window.app.controller.renderImages(<%= id %>, 1)"><%= name %></a>
    </script>

    <script id="template-imageItemView" type="text/template">
        <a href="#" onclick="window.app.controller.renderImages(<%= id %>, 1)"><%= filename %></a>
    </script>
{% endblock %}
